@model IEnumerable<Vidly.Models.Movie>
@{
    ViewBag.Title = "movieListReadOnly";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies:</h2>

<table class="displayTable">
    <thead>
        <tr>
            <th>Name</th>
            <th>Genre</th>
        </tr>
    </thead>
    @foreach (var m in Model)
    {
        <tr>
            <td>@m.Name</td>
            <td>@m.Genre.Name</td>
        </tr>

    }
</table>

@section scripts
{
    <script>
        $(document).ready(function () {
            $(".displayTable").DataTable();

        });
    </script>
}