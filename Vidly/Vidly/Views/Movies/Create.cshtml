@model Vidly.ViewModels.MovieViewModel
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add Movie</h2>
@using (Html.BeginForm("Create", "Movies"))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true,"Please Fill All Fields As Required!")
    <div class="form-group">
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ReleaseDate)
        @Html.TextBoxFor(m => m.ReleaseDate, new { @class = "form-control"})
        @Html.ValidationMessageFor(m => m.ReleaseDate)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Genre)
        @Html.DropDownListFor(m => m.Genre, new SelectList(Model.Genres, "Id","Name"), "")
        @Html.ValidationMessageFor(m => m.Genre)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.NumberInStock)
        @Html.TextBoxFor(m => m.NumberInStock, new {@class ="form-control"})
        @Html.ValidationMessageFor(m => m.NumberInStock)
    </div>
    <button class="btn btn-info">Save</button>
}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}
