<!---At model IEnumerable<Vidly.Models.Customer>---not needed any more...see action  -->
@{
    ViewBag.Title = "CustomerList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>List of Customers</h2>

<table class="displayTable">
    <thead>
        <tr>
            <th>Name</th>
            <th>Membership Type</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>

    </tbody>
    
</table>

<button class="btn btn-success AddButton">@Html.ActionLink("Add Customer", "Create", "Customers")</button>

@section scripts
{
    <script>
        $(document).ready(function () {
          var table =  $(".displayTable").DataTable({
                ajax: {
                    url: "/api/customers",
                    dataSrc:""
                },
                columns: [
                    {
                        data: "name",
                        render: function (data, type, customer) {
                            return "<a href='/customers/edit/" + customer.id + "'>" + customer.name + "</a>";
                        }
                    },
                    {
                        data:"membershipType"
                    },
                    {
                        data: "id",
                        render: function (data) {
                            return "<button class='btn-link js-delete' data-customer-id=" + data + "> Delete</button>";
                        }
                    }
                ]
            });

            $(".displayTable").on("click", ".js-delete", function () {
                var button = $(this);

                bootbox.confirm({
                    message: "Are you you want to delete this customer?",
                    buttons: {
                        cancel: {
                            label: 'No',
                            className: 'btn-success'
                        },
                        confirm: {
                            label: 'Yes',
                            className: 'btn-danger'
                        }
                    },
                    callback: function (result) {
                        
                        if(result)
                        {
                            $.ajax({
                                url: "/api/customers/" + button.attr("data-customer-id"),
                                method: "DELETE",
                                success: function () {
                                    table.row(button.parents("tr")).remove().draw();   
                                }

                            });
                        }
                    }
                });
            });

        });
    </script>
}